{
  "manifest_version": 2,

  "name": "Paper Safe",
  "short_name": "grujin",
  "description": "The simple login utility.",
  "version": "0.8.1",      
  
  "browser_action": {
    "default_icon": "images/pslightico16.png",
    "default_popup": "grujin.html"    
  },
    
  "icons": {
    "128": "images/pslight128.png",
    "48": "images/pslight48.png",
    "16": "images/pslight16.png"
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}